<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#2E7D32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/outline_arrow_back_24"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/header"/>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minha Agenda"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btnVoltar"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/header"/>

    <LinearLayout
        android:id="@+id/layoutAbas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbaConsulta"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ðŸ©º CONSULTA"
            app:cornerRadius="20dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#FFFFFF"
            android:textColor="#2E7D32"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbaRemedio"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ðŸ’Š REMÃ‰DIO"
            app:cornerRadius="20dp"
            android:layout_marginStart="4dp"
            app:backgroundTint="#E0E0E0"
            android:textColor="#757575"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutAbas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/grupoConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agendar MÃ©dico"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/editMedico"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Nome do MÃ©dico"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editEspecialidade"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Especialidade"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/editDataConsulta"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="12dp"
                        android:hint="Data"
                        android:focusable="false"
                        android:clickable="true"
                        android:background="#F5F5F5"
                        android:layout_marginEnd="4dp"/>

                    <EditText
                        android:id="@+id/editHoraConsulta"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="12dp"
                        android:hint="Hora"
                        android:focusable="false"
                        android:clickable="true"
                        android:background="#F5F5F5"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grupoRemedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novo Medicamento"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/editNomeRemedio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Nome do RemÃ©dio"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editDosagem"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Dosagem (Ex: 50mg)"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editEstoque"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Qtd na caixa (Ex: 30)"
                    android:inputType="number"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/editHoraInicio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Hora da primeira dose"
                    android:inputType="time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FrequÃªncia (Horas):"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/radioFrequencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <RadioButton android:id="@+id/rb8h" android:text="8h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <RadioButton android:id="@+id/rb12h" android:text="12h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <RadioButton android:id="@+id/rb24h" android:text="24h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarGeral"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONFIRMAR"
                app:backgroundTint="#2E7D32"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutFiltros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardForm">

        <TextView
            android:id="@+id/lblLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agenda de Hoje"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkRemedios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’Š"
            android:checked="true"
            android:buttonTint="#1976D2" />

        <CheckBox
            android:id="@+id/checkMedicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ©º"
            android:checked="true"
            android:buttonTint="#2E7D32"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAgenda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFiltros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>